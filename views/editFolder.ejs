<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/output.css">
    <title>Edit Folder</title>
</head>
<body class="text-zinc-200 bg-gray-600 h-screen">
    <%- include("appHeader", {user: locals.user}) %>

    <main class="bg-gray-900 h-full flex justify-center items-center p-3 text-black">
        <% let name; %>
        <% if (locals.error && locals.error.length > 0) {
            locals.error.forEach(err => {
                const msg = err.msg + " " + "your input was " + (error.value || "empty")
                if (err.path === "name") {
                    name = msg;
                }
            })
        } %>
        <div class="flex flex-col min-w-[40%] gap-5">
            <a class="px-3 font-custom text-white font-bold py-2 border-2 max-w-max rounded-full border-white flex items-center hover:text-black hover:bg-white" href="/home">
                <svg class="size-6" viewBox="0 0 1024 1024" fill="currentColor" class="icon" version="1.1" xmlns="http://www.w3.org/2000/svg" stroke="currentColor" stroke-width="51.2"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M669.6 849.6c8.8 8 22.4 7.2 30.4-1.6s7.2-22.4-1.6-30.4l-309.6-280c-8-7.2-8-17.6 0-24.8l309.6-270.4c8.8-8 9.6-21.6 2.4-30.4-8-8.8-21.6-9.6-30.4-2.4L360.8 480.8c-27.2 24-28 64-0.8 88.8l309.6 280z" fill=""></path></g></svg>
                To Folders
            </a>
            <form class="bg-white min-w-[40%] flex flex-col gap-5 p-3 rounded-lg shadow-md shadow-white" action="/home/edit/<%= locals.id %>" method="post">
                <h1 class="text-2xl font-bold font-custom mb-3 border-b-2 border-black max-w-max">Edit Folder</h1>
                <div class="flex flex-col">
                    <label for="name">Folder Name <span class="text-red-600">*</span></label>
                    <input class="border-2 px-2 py-1 border-black" type="text" id="name" name="name" placeholder="Name">
                    <span class="text-red-600"><%= name || "" %></span>
                </div>
                <div class="flex">
                    <button class="flex-1 box-content border-2 px-3 py-2 rounded-full hover:bg-white hover:border-blue-700 shadow-2xl shadow-cyan-700/80 bg-blue-400 hover:text-blue-800" type="submit">Edit Folder</button>
                </div>
            </form>
        </div>
    </main>
 
</body>
</html>