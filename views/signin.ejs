<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/output.css" />
    <title>Sign In</title>
  </head>
  <body class="text-zinc-200 bg-gray-600 h-screen">
    <%- include("appHeader", {user: locals.user}) %>
    <main class="bg-gray-900 h-full p-3 flex justify-center items-center">
        <!-- sign in form validation JS -->
        <% let email ,password %>
        <% if (locals.error && locals.error.length > 0) { %>
          <% locals.error.forEach(error => { 
              const message = error.msg + " " + "your input was " + (error.value || "empty")  
              if (error.path === "email") { 
                email = message; 
              } else if (error.path === "password") { 
                password = message; 
              }
          }) %>
      <% } %>



      <form
        class="rounded-3xl bg-white text-black min-w-[40%] max-w-[40%] flex flex-col gap-3 p-3"
        action="/sign-in"
        method="post"
      >
        <div class="flex items-center gap-4 justify-between">
          <h1
            class="font-bold text-2xl border-b-2 border-black max-w-max text-black"
          >
            Log In
          </h1>
          <svg class="size-8 " viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="#000000" stroke-width="0.8"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M8 7C9.65685 7 11 5.65685 11 4C11 2.34315 9.65685 1 8 1C6.34315 1 5 2.34315 5 4C5 5.65685 6.34315 7 8 7Z" fill="#000000"></path> <path d="M14 12C14 10.3431 12.6569 9 11 9H5C3.34315 9 2 10.3431 2 12V15H14V12Z" fill="#000000"></path> </g></svg>
        </div>
        <div class="flex flex-col">
          <label for="email">Email <span class="text-red-600">*</span></label>
          <input
            class="px-2 py-1 placeholder:italic flex-1 min-w-32 border-2 border-black/50"
            type="email"
            id="email"
            name="email"
            placeholder="ahnaf@example.com"
          />
          <span class="text-red-600"><%= email || ""  %></span>
        </div>

        <div class="flex flex-col">
          <label for="password"
            >Password <span class="text-red-600">*</span></label
          >
          <input
            class="px-2 py-1 placeholder:italic flex-1 min-w-32 border-2 border-black/50"
            type="password"
            id="password"
            name="password"
            placeholder="*****"
          />
          <span class="text-red-600"><%= password || ""  %></span>
        </div>

        <div class="flex">
          <div class="flex flex-1 justify-between gap-6 items-center font-bold">
            Don't have an account?
            <a
              class="font-normal shadow-2xl shadow-cyan-700/80 hover:bg-white hover:text-blue-800 hover:border-blue-700 border-2 rounded-full px-3 py-2 bg-blue-400"
              href="/sign-up"
              >Sign Up</a
            >
          </div>
        </div>

        <div class="flex flex-1">
          <% if (locals.fail && locals.fail.length > 0) { %>
            <span class="text-red-600"><%= locals.fail.join(", ") %></span>
          <% } %>
        </div>

        <div class="flex flex-1">
          <button
            class="border-2 hover:bg-white hover:border-blue-700 shadow-2xl flex-1 py-2 shadow-cyan-700/80 rounded-full bg-blue-400 hover:text-blue-800"
            type="submit"
          >
            Log In
          </button>
        </div>
      </form>
    </main>
  </body>
</html>
